                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="false"
                        android:text="Untuk memasukkan semua data Anda ke daftar, Anda harus memperluas class RecyclerView.Adapter. Objek ini membuat tampilan untuk item, dan mengganti konten sebagian tampilan dengan item data baru ketika item asli tidak lagi terlihat."
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt4"
        android:layout_below="@+id/lyt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvNews3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvNews"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:strokeColor="@color/colorPrimary"
