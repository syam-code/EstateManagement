<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/rounded_popup"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    app:layout_constraintCircleRadius="32dp"
    tools:context=".PopupGabungFragment">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="179dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ok_amico" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="28dp"
        android:text="Selamat, anda sudah bergabung. Semangat untuk menghafal yaa.."/>

</LinearLayout>